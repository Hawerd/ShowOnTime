<rows>
    <head>
        <beforeInit>
            <call command='setEditable'>
                <param>false</param>
            </call>
            <call command='enableMultiline'>
                <param>true</param>
            </call>
        </beforeInit>
        <column type="ro"   id="TypeClient"     width="180"    >Tipo de Cliente             </column>
        <column type="ro"   id="NameClient"  	width="180"    >Nombre de Cliente           </column>
        <column type="ro"   id="TypeIdClient"   width="100"    >Tipo identificación         </column>
        <column type="ro"   id="IdClient"	width="100"    >Número de identificación    </column>
        <column type="ro"   id="CityClient"     width="100"    >Ciudad                      </column>
        <column type="ro"   id="AddressClient"  width="180"    >Dirección                   </column>
        <column type="ro"   id="PhoneClient"    width="180"    >Telefono                    </column>
        <column type='ro'   id='method'		hidden="true"  >method                      </column>	
        <column type='ro'   id='op'             hidden="true"  >op                          </column>
        <afterInit> 	
            <call command="attachHeader"> 	
                <param>#text_filter,#text_filter,#select_filter,#text_filter,#text_filter</param>	
            </call>
        </afterInit>	
    </head>
</rows>
