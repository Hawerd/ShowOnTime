<items>
    <!--  Fieldset Info Events -->
    <item type="fieldset" name="fieldsetEvents" label="Por favor, ingrese los siguientes campos necesarios para crear o actualizar un Evento" width="auto" offsetLeft="5" offsetTop="5">

        <item type="block" width="auto" blockOffset="0" >
            <item type="input" name="CodeOfEvent"    label="Codigo de Evento:"   labelWidth="120"  inputWidth="85" readonly="true" disabled ="true" />
            <item type="input" name="NameOfClient"   label="Nombre de Cliente:"  labelWidth="120"  inputWidth="200" />
            <item type="input" name="NameOfEmployee" label="Nombre de Empleado:" labelWidth="120"  inputWidth="200" />
            <item type="newcolumn" offset="20" />
            <item type="input" name="NameOfEvent"    label="Nombre de Evento:"    labelWidth="120" inputWidth="200" />
            <item type="input" name="CityOfEvent"    label="Ciudad de Evento:"    labelWidth="120" inputWidth="200" />
            <item type="input" name="AddrOfEvent"    label="Direccion de Evento:" labelWidth="120" inputWidth="200" />
            <item type="newcolumn" offset="20" />
            <item type="input" name="DateOfMounting" label="Fecha de Montaje:"    labelWidth="100" inputWidth="80" />
            <item type="input" name="DateOfStart"    label="Fecha de Inicio:"     labelWidth="100" inputWidth="80" />
            <item type="input" name="DateFinal"      label="Fecha Final:"         labelWidth="100" inputWidth="80" />
        </item>
         
        <item type="label" label="" labelHeight="1"/>

        <item type="block" width="auto" blockOffset="190">
            <item type="button" name="update" width="110" value="Actualizar Evento" tooltip=""/>
            <item type="newcolumn" offset="5" />
            <item type="button" name="clear"  width="110" value="Limpiar Cambios"   tooltip="" />
            <item type="newcolumn" offset="5" />
            <item type="button" name="cancel" width="100" value="Cancelar"  tooltip="" />
        </item>
        
    </item>
    <item type="hidden" name="NumOfRemission" value=""/>
    <item type="hidden" name="method" value=""/>
    <item type="hidden" name="op" value=""/>  
</items>
